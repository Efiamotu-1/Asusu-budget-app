  <div class="mt-3">
    <button class="btn btn-primary px-3 py-1">
        <%= link_to 'Back', categories_path, class: "text-white text-decoration-none" %>
    </button>
  </div>
  <%= form_with(model: @category) do |form| %>
    <div class="field mt-4">
      <%= form.text_field :name, class:'form-control', placeholder: "Name" %>
    </div>

    <div class="field mt-4">
      <%= form.label :icon, class: "block text-gray-700 text-m font-bold mb-2" %>
      <%= form.select :icon, [
        ["Groceries", "groceries-icon.png"],
        ["Shopping", "shopping-icon.png"], ["Transport", "transport-icon.png"],
        ["Education", "education-icon.png"],
        ["Investment", "investment-icon.png"], ["Others", "others-icon.png"]
        ], class:'form-control', placeholder: "Icon" %>
    </div>

    <div class="field mt-4">
      <%= form.submit 'Save', class:'form-control' %>
    </div>
  <% end %>